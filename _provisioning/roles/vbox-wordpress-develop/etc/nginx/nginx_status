# nginx_status
location /nginx_status {
    allow  127.0.0.1;
    allow  172.31.0.0/16;
    allow  192.168.0.0/16;
    allow  10.0.0.0/8;
    deny   all;

    stub_status  on;
    access_log   off;
}

location /nginx_stub_status {
    allow  127.0.0.1;
    allow  172.31.0.0/16;
    allow  192.168.0.0/16;
    allow  10.0.0.0/8;
    deny   all;

    stub_status  on;
    access_log   off;
}

location /server-status {
    allow  127.0.0.1;
    allow  172.31.0.0/16;
    allow  192.168.0.0/16;
    allow  10.0.0.0/8;
    deny   all;

    stub_status  on;
    access_log   off;
}
