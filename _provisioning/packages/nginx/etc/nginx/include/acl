# Force access authentication from non-company related facilities

satisfy any;

allow  127.0.0.1;       # localhost
allow  172.31.0.0/16;   # localnetwork
allow  192.168.0.0/16;  # localnetwork
allow  10.0.0.0/8;      # localnetwork

deny all;

auth_basic              "Access limited zone";
auth_basic_user_file    /etc/nginx/auth/htpasswd;
